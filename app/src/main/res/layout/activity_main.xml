<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:fontFamily="@font/sfuidisplayregular"
        android:gravity="right|bottom"
        android:paddingRight="20dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="80sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_ac"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_lightgrey"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="AC"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_maismenos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_lightgrey"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="+/-"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_percent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_lightgrey"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="%"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_orange"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="รท"
            android:textColor="@color/white"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_darkgrey"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_darkgrey"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_darkgrey"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_mult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_orange"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="X"
            android:textColor="@color/white"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_darkgrey"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_darkgrey"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_darkgrey"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_sub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_orange"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_darkgrey"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_darkgrey"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_darkgrey"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_soma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_orange"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_darkgrey"
            android:fontFamily="@font/sfuidisplayregular"
            android:gravity="center_vertical|left"
            android:paddingLeft="30dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_virgula"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/button_darkgrey"
            android:fontFamily="@font/sfuidisplayregular"
            android:text=","
            android:textColor="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_igual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/button_orange"
            android:fontFamily="@font/sfuidisplayregular"
            android:text="="
            android:textColor="@color/white"
            android:textSize="34sp" />
    </LinearLayout>

</LinearLayout>